{$R *.lfm}

{ TForm1 }

procedure TForm1.Button1Click(Sender: TObject);
var
  i, j : integer;
  RowIndex, ColIndex: Integer;
  StringGridValues: TStringList;
  Product: Integer;
begin
   Chart1BarSeries1.clear();
   for i := 0 to 7 do
   begin
     for j := 0 to 4 do
     begin
       StringGrid1.Cells[i,j] := IntToStr(random(50)+40);
     end;
     Chart1BarSeries1.AddY(StrToInt(StringGrid1.Cells[i,j]),StringGrid1.Cells[i,j], clRed);
     begin

     end;
   end;



     StringGridValues := TStringList.Create;

  try
    for RowIndex := 0 to StringGrid1.RowCount - 1 do
    begin
      for ColIndex := 0 to StringGrid1.ColCount - 1 do
      begin
        StringGridValues.Add(StringGrid1.Cells[ColIndex, RowIndex]);
      end;
    end;

    // Теперь у вас есть все значения из StringGrid в StringGridValues






  finally
    StringGridValues.Free; // Освободите память, когда закончите использование
  end;









end;

procedure TForm1.BitBtn1Click(Sender: TObject);
begin
end;

end.
